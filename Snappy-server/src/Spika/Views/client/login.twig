<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{lang.clientSiteTitle}}</title>

    <link href="{{ROOT_URL}}/assets/css/bootstrap.css" rel="stylesheet">
    <link href="{{ROOT_URL}}/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="{{ROOT_URL}}/assets/css/sb-admin.css" rel="stylesheet">

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{lang.labelLogin}}</h3>
                    </div>
                    <div class="panel-body">
                        
                        {% include "admin/alerts.twig" %}
                            
                        <form role="form" method="post" action="{{ROOT_URL}}/client/login">
                        
                            <fieldset>
                            
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{lang.formEmailPlaceHolder}}" name="username" type="username" value="{{formValues.username}}" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="{{lang.formPasswordPlaceHolder}}" name="password" type="password" value="{{formValues.password}}">
                                </div>
                                <div class="text-right">
                                    <a href="{{ROOT_URL}}/client/resetPassword">{{lang.labelForgotPassword}}</a>
                                </div>
                                
                                <div style="margin-top:10px"></div>
                                
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" name="login" class="btn btn-lg btn-success btn-block" value="{{lang.btnLogin}}"/>
                                <input type="submit" name="regist" class="btn btn-lg btn-primary btn-block" value="{{lang.btnRegist}}"/>
                                
                            </fieldset>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="{{ROOT_URL}}/assets/js/jquery-1.10.2.js"></script>
    <script src="{{ROOT_URL}}/assets/js/bootstrap.min.js"></script>
    <script src="{{ROOT_URL}}/assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="{{ROOT_URL}}/assets/js/sb-admin.js"></script>

</body>

</html>
