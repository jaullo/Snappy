{% extends "admin/adminBase.twig" %}

{% block content %}

<script type="text/javascript">
    
    $(document).ready(function() {

        $('#chkbox_change_password').click(function() {
        
            var $this = $(this);

            if ($this.is(':checked')) {
                
                $('#group_password').removeAttr("disabled");
                $('#group_password').val('');
                
            } else {
                
                $('#group_password').attr("disabled","disabled");
                $('#group_password').val('');
                
            }
            
        });        
    });
    
</script>

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {% if mode == 'new' %}
                            {{lang.labelAddNews}}
                        {% elseif mode == 'view' %}
                            {{lang.labelViewNews}}
                        {% elseif mode == 'edit' %}
                            {{lang.labelEditNews}}
                        {% endif %}                    
                    </h1>
                </div>
            </div>
             
            <div class="row">
                <div class="col-lg-12">
                    
                    {% include "admin/alerts.twig" %}
                    
                    {% if mode == 'edit' %}
                        <form role="form" method="post" action="{{ROOT_URL}}/admin/news/edit/{{id}}" enctype="multipart/form-data">
                    {% else %}
                        <form role="form" method="post" action="{{ROOT_URL}}/admin/news/add" enctype="multipart/form-data">
                    {% endif %}  

                        <div class="form-group">
                            <label>{{lang.formStoryTitle}}</label>
                                {% if mode == 'new' or mode == 'edit' %}<span class="text-danger">{{lang.noteRequired}}</span>{% endif %}
                            
                            {% if mode == 'new' or mode == 'edit'%}
                                <input class="form-control" name="title" value="{{formValues.title}}">
                            {% else %}
                                <div class="well">{{formValues.title}}</div>
                            {% endif %}
                            
                        </div>
                        
                        <div class="form-group">
                            <label>{{lang.formStoryUrl}}</label>
                            
                            {% if mode == 'new' or mode == 'edit'%}
                                <input class="form-control" name="story_url" value="{{formValues.story_url}}">
                            {% else %}
                                <div class="well">{{formValues.story_url}}</div>
                            {% endif %}
                            
                        </div>
                        
                        <div class="form-group">
                            <label>{{lang.formStoryContent}}</label>
                                {% if mode == 'new' or mode == 'edit' %}<span class="text-danger">{{lang.noteRequired}}</span>{% endif %}
                            
                            {% if mode == 'new' or mode == 'edit'%}
                                <textarea class="form-control" rows="10" name="content">{{formValues.content}}</textarea>
                            {% else %}
                                <div class="well">{{formValues.content}}</div>
                            {% endif %}
                            
                        </div>
                            
                        {% if mode == 'new' or mode == 'edit' %}
                            <button type="submit" class="btn btn-primary btn-lg btn-block">{{lang.btnSave}}</button>
                        {% else %}

                        {% endif %}
                        
                    </form>
                    
                </div>

                
            </div>
             
</script>
       
{% endblock %}
