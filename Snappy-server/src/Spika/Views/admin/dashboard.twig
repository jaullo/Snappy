{% extends "admin/adminBase.twig" %}

{% block content %}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{lang.labelDashboard}}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div id="morris-area-chart"><i class="fa fa-bar-chart-o fa-fw"></i> {{lang.labelDashboardStatistics}}</div>
                        </div>

                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <td>{{lang.labelDashboardTotalUsers}}</td>
                                        <td>{{countUsers}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{lang.labelDashboardTotalMessages}}</td>
                                        <td>{{countMessages}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{lang.labelDashboardActiveUsers}}</td>
                                        <td>{{countLastLoginedUsers}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            
                        </div>

{% if isAdmin %}
                        <div class="panel-heading">
                            <div id="morris-area-chart"><i class="glyphicon glyphicon-resize-small"></i> {{lang.labelDashboardEndpoint}}</div>
                        </div>

                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <td><i class="fa fa-apple"></i> {{lang.labelDashboardiOSSettings}} ( <strong>Constants.h</strong> )</td>
                                    </tr>
                                    <tr>
                                        <td>
                                        
<code>
/* change here */<br />
#define ServerListAPIURL        @"{{ROOT_URL}}/api/servers"<br />
#define DefaultAPIEndPoint      @"{{ROOT_URL}}"<br />
#define DefaultPageUrl          @"{{ROOT_URL}}/page"<br />
/* end change here */<br />
</code>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><i class="fa fa-android"></i> {{lang.labelDashboardAndroidSettings}} ( <strong>com.cloverstudio.spika.utils.ConstServer</strong> )</td>
                                    </tr>
                                    <tr>
                                        <td>
<code>
public static final String BASE_URL                	= "{{ROOT_URL}}";<br />
public static final String INFORMATION_URL			= "{{ROOT_URL}}/page/information/";<br />
public static final String LIST_SERVERS_URL         = BASE_URL + "/" + Const.API_FOLDER + "servers";
</code>

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                            
                        </div>

{% endif %}

                    </div>

                </div>

                
            </div>
            <!-- /.row -->
            
{% endblock %}
